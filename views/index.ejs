<!DOCTYPE html>
<html lang="en">
<%- include("partials/header.ejs") %>
<body>
    
    <div class="top">
    <h1 class="title">BLERB</h1>
    <a class="newBtn" href="/new"> + Create New Blerb Post</a>
</div>

    <div class="main">
        <h2> Blerb Posts</h2>
      
      
            <% posts.forEach((post) => { %>
                <div class="content" key="<%= post.id %>">
                   
                <h2><%= post.title %></h2>
                <h3><%=post.author %></h3>
                <p class="pContent"><%= post.content %></p>
                <div class="postBtns">
                <a class="newBtn contBtn" href="/api/posts/delete/<%=post.id%>">Delete Post</a>
                <a class="newBtn contBtn editBtn" href="/edit/<%=post.id%>">Edit Post</a>
            </div>
                
            </div>
            <%}) %>
    </div>
    <%- include("partials/footer.ejs") %>

   
</body>
</html>